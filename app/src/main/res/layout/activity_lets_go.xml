<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <!-- Custom Title Bar -->
    <LinearLayout
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:src="@drawable/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:fontFamily="serif"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Lets Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:src="@drawable/notifications_bell_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <!-- Custom newsUpdates and Videos Bar -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="News Updates"
            android:id="@+id/news_updates_main"
            android:background="@drawable/purple_bg_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/videos_main"
            android:layout_marginRight="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="-2dp"
            android:layout_weight="1"
            android:background="@drawable/g_right"
            android:text="VIDEOS"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!-- Main Post by Coustm Row -->
    <FrameLayout
        android:layout_marginTop="15dp"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>
