<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context="glowingsoft.com.haqkhattebhussain.ContactUsActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/contact_us_bg_top" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="20dp"
            android:background="@drawable/address_bg_white"
            android:paddingTop="25dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="30dp"
            android:text="@string/addressOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/address_bg_purple"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Address"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp" />
        <Button
            android:id="@+id/viewMapBtnOne"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/address_bg_white"
            android:text="View Map"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="20dp"
            android:background="@drawable/address_bg_white"
            android:paddingTop="25dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="30dp"
            android:text="@string/addressTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/address_bg_purple"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Address"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="9dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/viewMapBtnTwo"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/address_bg_white"
            android:text="View Map"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </RelativeLayout>
</LinearLayout>
